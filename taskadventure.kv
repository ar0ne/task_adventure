#:kivy 1.0.1

<AddTaskDialog>
    
    description: description

    canvas.before:
        Color:
            rgba: 0.188, 0.247, 0.624, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:

        orientation: 'vertical'

        Label:
            size_hint_y: 0.4
            font_size: root.width / 15
            text: "Description"

        TextInput:
            id: description
            text: ""
            font_size: self.width / 20
            background_color: (0.961, 0.961, 0.961, 1)
            foreground_color: (0, 0, 0, 1)

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: root.height / 10

            Button:
                text: "SAVE"
                on_press: root.save()
                font_size: root.width / 23
                background_normal: ""
                background_color: (1, 1, 1, 1.0)
                color: 0, 0, 0, 1

            Button:
                text: "CANCEL"
                on_press: root.cancel()
                font_size: root.width / 23
                background_normal: ""
                background_color: (1, 1, 1, 1.0)
                color: 0, 0, 0, 1


<WaitTaskDialog>

    canvas.before:
        Color:
            rgba: 0.247, 0.318, 0.71, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Button:
        text: "START"
        font_size: self.width / 6
        halign: 'center'
        valign: 'middle'  
        size_hint: 0.94, 0.3
        pos: (self.parent.width - self.width)/2, root.top - (self.height * 1.1)
        background_normal: ""
        background_color: (0.188, 0.247, 0.624, 1)
        color: 1, 1, 1, 1


        on_press:
            root.start()

    Button:
        text: "ADD TASK"
        size_hint: 1, 0.1
        font_size: self.width / 23
        background_normal: ""
        background_color: (1, 1, 1, 1.0)
        color: 0, 0, 0, 1

        on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'add_task'



<RunningTaskDialog>

    clock: clock
    description: description

    canvas.before:
        Color:
            rgba: 0.247, 0.318, 0.71, 1
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:

        BoxLayout:
            orientation: 'vertical'

            Label:
                id: description
                text: ""
                halign: 'center'
                font_size: root.width / 18
                text_size: self.width, None
                height: self.texture_size[1]
                color: (1, 1, 1, 1)

    Button:
        id: clock
        text: ""
        font_size: self.width / 6
        halign: 'center'
        valign: 'middle'  
        size_hint: 0.94, 0.3
        pos: (self.parent.width - self.width)/2, root.top - (self.height + self.height * 0.1)
        background_normal: ""
        background_color: (1, 0.251, 0.506, 1)

    Button:
        id: add_button
        text: "ADD TASK"
        size_hint: 1, 0.1
        font_size: self.width / 23
        background_normal: ""
        background_color: (1, 1, 1, 1.0)
        color: 0, 0, 0, 1

        on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'add_task'


