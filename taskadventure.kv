#:kivy 1.0.1

<AddTaskDialog>
    
    description: description

    canvas.before:
        Color:
            rgba: 0.247, 0.318, 0.71, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:

        orientation: 'vertical'

        Label:
            size_hint_y: 0.4
            font_size: root.width / 15
            text: "Description"

        TextInput:
            id: description
            text: ""
            font_size: self.width / 20
            background_color: (0.961, 0.961, 0.961, 1)
            foreground_color: (0, 0, 0, 1)

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: root.height / 10

            Button:
                text: "SAVE"
                on_press: root.save()
                font_size: root.width / 18
                background_normal: ""
                background_color: (1, 1, 1, 1.0)
                color: 0, 0, 0, 1

            Button:
                text: "CANCEL"
                on_press: root.cancel()
                font_size: root.width / 18
                background_normal: ""
                background_color: (1, 1, 1, 1.0)
                color: 0, 0, 0, 1


<WaitTaskDialog>

    closed_tasks_panel: closed_tasks_panel

    canvas.before:
        Color:
            rgba: 0.247, 0.318, 0.71, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:

        size_hint: 0.94, 0.3
        pos: (self.parent.width - self.width) / 2, root.top - (self.height * 1.1)

        Button:
            text: "START"
            font_size: self.width / 6
            halign: 'center'
            valign: 'middle'

            background_normal: ""
            background_color: (0.188, 0.247, 0.624, 1)
            color: 1, 1, 1, 1

            on_press:
                root.start()

    BoxLayout:
        id: closed_tasks_panel
        orientation: "vertical"
        size_hint: 1, 1
        pos: 0, root.top * 0.1


    Button:
        text: "ADD TASK"
        size_hint: 1, 0.1
        font_size: self.width / 18
        background_normal: ""
        background_color: (1, 1, 1, 1.0)
        color: 0, 0, 0, 1

        on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'add_task'



<RunningTaskDialog>

    clock: clock
    description: description

    canvas.before:
        Color:
            rgba: 0.247, 0.318, 0.71, 1
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:

        BoxLayout:
            orientation: 'vertical'

            Label:
                id: description
                text: ""
                halign: 'center'
                font_size: root.width / 18
                text_size: self.width, None
                height: self.texture_size[1]
                color: (1, 1, 1, 1)

    Button:
        id: clock
        text: ""
        font_size: self.width / 6
        halign: 'center'
        valign: 'middle'  
        size_hint: 0.94, 0.3
        pos: (self.parent.width - self.width)/2, root.top - (self.height + self.height * 0.1)
        background_normal: ""
        background_color: (1, 0.251, 0.506, 1)

    Button:
        id: add_button
        text: "ADD TASK"
        size_hint: 1, 0.1
        font_size: self.width / 18
        background_normal: ""
        background_color: (1, 1, 1, 1.0)
        color: 0, 0, 0, 1

        on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'add_task'


<ClosedTaskPreview>

    short_description: short_description
    date: date

    size_hint_y: None
    size: root.size
    pos: root.pos

    BoxLayout:

        orientation: "horizontal"

        Image:

            canvas.before:
                Color:
                    rgba: 0.961, 0.961, 0.961, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            size_hint_x: 0.2
            source: "images/checkmark-circle.png"
            center_x: self.parent.center_x
            center_y: self.parent.center_y

        BoxLayout:

            canvas.before:
                Color:
                    rgba: 0.961, 0.961, 0.961, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            size_hint_x: 0.7

            orientation: "vertical"

            Label:
                id: short_description
                text: ""
                text_size: self.size
                texture_size: self.size
                size_hint_y: 0.6
                color: (0, 0, 0, 1)
                valign: "middle"
                font_size: root.width / 20

            Label:
                size_hint: 1, 1
                id: date
                text: ""
                text_size: self.size
                texture_size: self.size
                size_hint_y: 0.4
                color: (0.259, 0.259, 0.259, 1)
                font_size: root.width / 27
                valign: "middle"

        Button:

            size_hint_x: 0.2

            on_press:
                root.show_closed_task_dialog(self)

            background_normal: ""
            background_color: (0.91, 0.91, 0.91, 1)

            Image:
                source: "images/right-arrow.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: root.width * 0.7, root.height * 0.7




<ClosedTaskDialog>
    Button:
        text: "BACK"
        size_hint: 1, 0.1
        font_size: self.width / 18
        background_normal: ""
        background_color: (1, 1, 1, 1.0)
        color: 0, 0, 0, 1

        on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'wait_task'



<OneButtonPopup>
    close_button: close_button
    content_label: content_label

    title: ''
    size_hint: 0.9, 0.3
    background: ""
    title_color: (0, 0, 0, 1)

    BoxLayout:
        orientation: "vertical"
        Label:
            id: content_label
            text: ""
            color: (0, 0, 0, 1)
        Button:
            id: close_button
            text: ""
            size_hint: 1, 0.4
            color: (0, 0, 0, 1)
            background_normal: ""
            background_color: (1, 1, 1, 1.0)
            on_press:
                root.on_press_dismiss()

<TwoButtonPopup>

    first_button: first_button
    second_button: second_button
    content_label: content_label

    title: ''
    size_hint: 0.9, 0.3
    background: ""
    title_color: (0, 0, 0, 1)

    BoxLayout:

        orientation: "vertical"

        Label:
            id: content_label
            text: ""
            color: (0, 0, 0, 1)

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.4

            Button:
                id: first_button
                text: ""
                size_hint: 0.5, 1
                color: (0, 0, 0, 1)
                background_normal: ""
                background_color: (1, 1, 1, 1.0)
                on_press:
                    root.first_button_callback()

            Button:
                id: second_button
                text: ""
                size_hint: 0.5, 1
                color: (0, 0, 0, 1)
                background_normal: ""
                background_color: (1, 1, 1, 1.0)
                on_press:
                    root.second_button_callback()
