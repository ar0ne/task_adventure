#:kivy 1.0.1

<AddTaskDialog>
    
    title: title
    description: description

    BoxLayout:

        orientation: 'vertical'

        Label:
            font_size: root.width / 15
            text: "Title"

        TextInput:
            id: title
            text: ""

        Label:
            font_size: root.width / 15
            text: "Description"

        TextInput:
            id: description
            text: ""

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: root.height / 10

            Button:
                text: "SAVE"
                on_press: root.save()

            Button:
                text: "CANCEL"
                on_press: root.cancel()


<WaitTaskDialog>

    Button:
        text: "START"
        font_size: self.width / 6
        halign: 'center'
        valign: 'middle'  
        size_hint: 0.94, 0.3
        pos: (self.parent.width - self.width)/2, root.top - (self.height * 1.1)

        on_press:
            root.start()

    Button:
        text: "ADD TASK"
        size_hint: 1, 0.1

        on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'add_task'



<RunningTaskDialog>

    clock: clock
    title: title
    description: description

    canvas.before:
        Color:
            rgba: 0, 1, 0.5, 0.5
        Rectangle:
            pos: self.pos
            size: self.size

    Button:
        id: clock
        text: ""
        font_size: self.width / 6
        halign: 'center'
        valign: 'middle'  
        size_hint: 0.94, 0.3
        pos: (self.parent.width - self.width)/2, root.top - (self.height + self.height * 0.1)

    FloatLayout:

        canvas.before:
            Color:
                rgba: 0, 1, 0.2, 0.5
            Rectangle:
                pos: 0, root.height * 0.11
                size: root.width, root.height * 0.55

        BoxLayout:
            size_hint: 1, 0.65
            orientation: 'vertical'

            Label:
                font_size: root.width / 19
                id: title
                text: ""
                size_hint: 1, 0.2

            RstDocument:
                font_size: root.width / 20
                id: description
                text: ""
                size_hint: 1, 0.5

    Button:
        id: add_button
        text: "ADD TASK"
        size_hint: 1, 0.1

        on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'add_task'


